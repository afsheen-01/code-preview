{
  "name": "code-preview",
  "displayName": "code-preview",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.previewReact",
        "title": "Preview React Component"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname =~ /\\.(jsx|tsx|js|ts)$/",
          "command": "extension.previewReact",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.previewReact",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus && (resourceExtname =~ /\\.(jsx|tsx|js|ts)$/)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.0.27",
    "eslint": "^7.9.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "glob": "^7.1.6",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
